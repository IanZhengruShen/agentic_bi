# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=agentic_bi
POSTGRES_USER=admin
POSTGRES_PASSWORD=devpassword123

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=devredispass

# ============================================
# Azure OpenAI Configuration
# ============================================
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-05-15

# ============================================
# MindsDB Configuration (External Service)
# ============================================
# No authentication required for MVP
MINDSDB_API_URL=https://your-mindsdb-instance.com

# ============================================
# OPA Configuration (External Service)
# ============================================
OPA_URL=http://your-opa-instance:8181

# ============================================
# Langfuse Configuration (External Service)
# Observability and evaluation for agents
# ============================================
LANGFUSE_HOST=https://your-langfuse-instance.com
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
JWT_REFRESH_EXPIRATION_DAYS=7

# ============================================
# Application Configuration
# ============================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Traefik Configuration (for existing Traefik)
# ============================================
TRAEFIK_NETWORK=web
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_TLS=true
TRAEFIK_CERTRESOLVER=letsencrypt

# Domain Configuration
FRONTEND_DOMAIN=agentic-bi.yourdomain.com
API_DOMAIN=api-agentic-bi.yourdomain.com

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=csv,xlsx,json

# ============================================
# Monitoring & Logging
# ============================================
ENABLE_METRICS=true
SENTRY_DSN=
